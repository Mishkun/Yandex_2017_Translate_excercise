<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/translation_card_margin"
                android:paddingTop="@dimen/translation_card_margin">

    <TextView
        android:id="@+id/translations_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/translation_card_margin"
        android:layout_marginStart="@dimen/text_margin"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/textSize"
        tools:translation="1."/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/text_margin"
        android:layout_toEndOf="@id/translations_number"
        android:orientation="vertical">

        <TextView
            android:id="@+id/synonyms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/translationTextSize"
            tools:translation="Context"
            />

        <TextView
            android:id="@+id/meanings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTernaryText"
            tools:translation="Context"/>
    </LinearLayout>

</RelativeLayout>